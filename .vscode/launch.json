    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Arquivo Atual",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },

        {
            "name": "Python Debugger: main",
            "type": "debugpy",
            "request": "launch",
            "program": "src/main.py",
            "console": "integratedTerminal",
            "args": ["-debug", "-curso", "Sistemas de Informação"]
        },
        {
            "name": "Python Debugger: main com args",
            "type": "debugpy",
            "request": "launch",
            "program": "src/main.py",
            "console": "integratedTerminal",
            "args": [
                // "-pesquisa", "teste",
                "-curso", "Sistemas de Informação",
                // "-seg", ""
                // "-ano_semestre", "2024", "1",
                "-debug"
            ]
        },
        {
            "name": "Python Debugger: test com args",
            "type": "debugpy",
            "request": "launch",
            "program": "src/test.py",
            "console": "integratedTerminal",
            "args": [
                // "-pesquisa", "teste",
                "-curso", "Sistemas de Informação",
                // "-seg", ""
                "-ano_semestre", "2025", "2",
                // "-debug",
                "-seg", "16:00-18:00",
                "-ter", "16:00-22:00",
                "-qua", "16:00-18:00",
                "-qui", "16:00-22:00",
                "-sex", "16:00-22:00",
            ]
        }
    ]
}